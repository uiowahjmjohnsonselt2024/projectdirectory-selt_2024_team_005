<!DOCTYPE html>
<html>
<head>

<body>
<div class="container">
  <% flash.each do |key, message| %>
    <div class="alert alert-<%= key == :notice ? 'success' : 'danger' %>">
      <%= message %>
    </div>
  <% end %>

  <%= yield %>
</div>
</body>

<title>Sign Up</title>
  <style>
      body {
          display: flex;
          justify-content: center;
          align-items: center;
          height: 100vh;
          margin: 0;
          font-family: Arial, sans-serif;
          background-color: #2e2e2e; /* Dark background */
          color: white; /* Make text white */
      }
      .signup-container {
          text-align: center;
          background-color: #3a3a3a; /* Dark container background */
          padding: 40px; /* Add padding for spacing */
          border-radius: 10px;
          box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
          color: white;
          width: 100%;
          max-width: 400px; /* Set a max width for the form */
      }
      .signup-container h1,
      .signup-container h2 {
          margin-bottom: 20px;
          color: grey;
      }
      .form-field {
          margin-bottom: 20px;
      }
      .form-field label {
          display: block;
          margin-bottom: 5px;
          color: white;
      }
      .form-field input {
          width: 100%;
          padding: 10px;
          border: 1px solid #ccc;
          border-radius: 5px;
          background-color: #4b4b4b;
          color: white;
      }
      .form-field input::placeholder {
          color: #d3d3d3; /* Light grey placeholder */
      }
      .btn {
          background-color: #5a5a5a;
          color: white;
          border: none;
          padding: 12px 25px;
          border-radius: 5px;
          cursor: pointer;
          margin-bottom: 15px;
      }
      .btn:hover {
          background-color: #6a6a6a;
      }
      .btn-link {
          display: inline-block;
          margin-top: 10px;
          color: white;
      }
      .btn-link:hover {
          color: #bbb;
      }
  </style>
</head>
<body class="loginpages">
<div class="signup-container">
  <h1>Shards of the Grid</h1>
  <h2>Create an Account</h2>
  <%= form_with(model: @user, url: signup_path, method: "post") do |form| %>

    <div class="form-field">
      <%= form.label :email, "Email:" %>
      <%= form.text_field :email, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :username, "Username:" %>
      <%= form.text_field :username, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :password, "Password:" %>
      <%= form.password_field :password, required: true %>
    </div>

    <div class="form-field">
      <%= form.label :password_confirmation, "Confirm Password:" %>
      <%= form.password_field :password_confirmation, required: true %>
    </div>

    <div>
      <%= form.submit "Create Account", class: "btn" %>
    </div>

    <div class="mt-3">
      <a href="<%= login_path %>" class="btn-link">Already have an account? Log in</a>
    </div>
  <% end %>
</div>
</body>
</html>
